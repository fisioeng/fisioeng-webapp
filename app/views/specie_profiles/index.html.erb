<div class="page-header">
  <%= link_to new_specie_profile_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Specie profile
  <% end %>
  <h1>Listing specie_profiles</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Especiename</th>
            <th>Alias</th>
            <th>Description</th>
            <th>Min temperature</th>
            <th>Max temperature</th>
            <th>Min surface temperature</th>
            <th>Max surface temperature</th>
            <th>Min heart frequency</th>
            <th>Min relative humidity</th>
            <th>Max relative humidity</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @specie_profiles) do |specie_profile| %>
            <td><%= specie_profile.especiename %></td>
            <td><%= specie_profile.alias %></td>
            <td><%= specie_profile.description %></td>
            <td><%= specie_profile.min_temperature %></td>
            <td><%= specie_profile.max_temperature %></td>
            <td><%= specie_profile.min_surface_temperature %></td>
            <td><%= specie_profile.max_surface_temperature %></td>
            <td><%= specie_profile.min_heart_frequency %></td>
            <td><%= specie_profile.min_relative_humidity %></td>
            <td><%= specie_profile.max_relative_humidity %></td>
            <td><%= link_to 'Show', specie_profile %></td>
        <td><%= link_to 'Edit', edit_specie_profile_path(specie_profile) %></td>
        <td><%= link_to 'Destroy', specie_profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
